<MyGrid>:
    button1: button1
    button2: button2
    button3: button3
    button4: button4
    GridLayout:
        cols: 2
        size: root.width, root.height

        Button:
            id: button1
            text: "Switch 1"
            color: [255,255,255,1]
            font_size: 50
            on_press: root.btn(1)
        Button:
            id: button2
            text: "Switch 2"
            color: [0,0,0,1]
            font_size: 50
            on_press: root.btn(2)
        Button:
            id: button3
            text: "Switch 3"
            color: [0,0,0,1]
            font_size: 50
            on_press: root.btn(3)
        Button:
            id: button4
            text: "Switch 4"
            color: [0,0,0,1]
            font_size: 50
            on_press: root.btn(4)