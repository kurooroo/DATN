<MyGrid>:
    button1: button1
    button2: button2
    button3: button3
    button4: button4
    GridLayout:
        cols: 2
        size: root.width, root.height

        Button:
            id: button1
            text: "Button 1"
            on_press: root.btn(1)
        Button:
            id: button2
            text: "Button 2"
            on_press: root.btn(2)
        Button:
            id: button3
            text: "Button 3"
            on_press: root.btn(3)
        Button:
            id: button4
            text: "Button 4"
            on_press: root.btn(4)